<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="colorPrimary">@color/color_purple</item>
        <item name="colorPrimaryDark">@color/color_purple_dark</item>
        <item name="colorAccent">@color/color_orange</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="view_interaction_answer">
        <item name="android:gravity">center</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextOnCard</item>
        <item name="android:lines">2</item>
        <item name="android:maxWidth">1dp</item>
        <item name="android:maxHeight">1dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
    </style>

    <style name="view_shutter">
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorShadowing</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_on_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">70sp</item>
        <item name="android:textColor">@color/colorTextOnCard</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="flipcard_main">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">140sp</item>
        <item name="android:textColor">@color/colorTextOnCard</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="flipcard_side">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextOnCard</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="nav_list_item">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="cardBackgroundColor">@color/color_white</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">8dp</item>
    </style>

</resources>
